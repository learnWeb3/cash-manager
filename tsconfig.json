{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": false,
        "sourceMap": true,
        "target": "ES5",
        "outDir": "build",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "ts-node": {
        "esm": true
    }
}